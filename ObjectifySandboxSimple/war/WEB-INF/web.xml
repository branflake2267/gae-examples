<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee"
 xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
 version="2.5">

 <servlet>
  <servlet-name>Home</servlet-name>
  <servlet-class>org.gonevertical.HomeServlet</servlet-class>
 </servlet>
 <servlet-mapping>
  <servlet-name>Home</servlet-name>
  <url-pattern>/home</url-pattern>
 </servlet-mapping>

 <servlet>
  <servlet-name>Loading</servlet-name>
  <servlet-class>org.gonevertical.LoadExampleServlet</servlet-class>
 </servlet>
 <servlet-mapping>
  <servlet-name>Loading</servlet-name>
  <url-pattern>/load_example</url-pattern>
 </servlet-mapping>

 <servlet>
  <servlet-name>Saving</servlet-name>
  <servlet-class>org.gonevertical.SaveExampleServlet</servlet-class>
 </servlet>
 <servlet-mapping>
  <servlet-name>Saving</servlet-name>
  <url-pattern>/save_example</url-pattern>
 </servlet-mapping>

 <welcome-file-list>
  <welcome-file>index.html</welcome-file>
 </welcome-file-list>

</web-app>
